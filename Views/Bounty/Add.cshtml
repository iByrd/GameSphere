@model Bounty

@{
    ViewData["Title"] = "Add a new Bounty";
}

<div class="container my-4 text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <hr />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input type="text" asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <input type="text" asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Reward">Reward:</label>
            <input type="number" asp-for="Reward" class="form-control">
            <span asp-validation-for="Reward" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Difficulty">Difficulty:</label>
            <select asp-for="Difficulty" class="form-control" asp-items="Html.GetEnumSelectList<DifficultyType>()">
            </select>
            <span asp-validation-for="Difficulty" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status">Status:</label>
            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<StatusType>()">
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <hr />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-flat col">Add</button>
            <a asp-action="List" class="btn btn-flat danger col">Cancel</a>
        </div>
    </form>
</div>


@section Scripts
{
    <script type="module" vite-src="~/jquery.ts"></script>
}
