@model WeaponViewModel

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GameSphere</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Camp">Camp</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Bounty" asp-action="List">Bounties</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Weapon" asp-action="WeaponList">Weapon Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container" style="background-color:slategray; max-width: 800px;">

    <h2 class="page-header text-center">Request a New Weapon</h2>
    <hr />

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="WeaponAdd" method="post">

        <div class="form-group">
            <label asp-for="NewWeapon.Cost">Cost:</label>
            <input type="number" asp-for="NewWeapon.Cost" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="NewWeapon.Name">Name:</label>
            <input type="text" asp-for="NewWeapon.Name" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="NewWeapon.Damage">Damage:</label>
            <input type="number" asp-for="NewWeapon.Damage" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="NewWeapon.Weight">Weight:</label>
            <input type="number" asp-for="NewWeapon.Weight" class="form-control">
        </div>

        <hr />

        <div class="d-grid gap-2 col-6 mx-auto" style="padding-bottom: 10px;">
            <button type="submit" class="btn btn-success">Request</button>
            <a asp-action="WeaponList" class="btn btn-danger">Cancel</a>
        </div>

    </form>

</div>
